<div class='container'>
  <div class='row justify-content-center mt-5 '>
    <div class='col-12 col-md-6'>
      <div class='bg-white border border-info border-opacity-25 rounded-4 shadow p-3 bg-body rounded'>
        <h2 class="d-flex justify-content-center mt-2 mb-3"><%= @practice.name %></h2>
        <p class="d-flex justify-content-center m-3 mt-2 mb-5" ><%= @practice.info %></p>
        <div class="d-flex">
          <div class="practice-card d-flex justify-content-center align-items-center border border-info rounded-4 shadow p-3 bg-body rounded border-opacity-25 border-light bg-white mb-5">
            <div class="practice-infos">
              <img src="<%=image_path("loupe.png") %>" alt="">
              <div>
                <span class="card-text">Find a practice near you</span>
              </div>
              <%= link_to practice_institutions_path(@practice), class: 'fw-bold text-decoration-none practice-card-link' do %>
              </div>
            <% end %>
          </div>
          <div class="practice-card d-flex justify-content-center align-items-center border border-info rounded-4 shadow p-3 bg-body rounded border-opacity-25 border-light bg-white">
            <div class="practice-infos">
              <img src="<%=image_path("translation.png") %>" alt="">
              <div>
                <span class="card-text">Translation helper</span>
              </div>
              <%= link_to new_practice_card_path(@practice), class: 'fw-bold text-decoration-none practice-card-link' do %>
              </div>
            <% end %>
          </div>
        </div>
        <p class="text-decoration-none d-flex justify-content-center mt-2"><%= link_to 'back', root_path, class:"userList btn btn-outline-danger fixed-width" %></p>
      </div>
    </div>
  </div>
</div>
