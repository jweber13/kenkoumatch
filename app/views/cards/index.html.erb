<%# <h1 class="text-center">your cards</h1> %>
<div id="banner-content">
  <div></div>
</div>
<div class="container-index">
  <h1 class="index-header pb-0"><i class="fa-regular fa-clipboard" style="padding: 8px">  </i>Your Cards</h1>
  <%# <i>view cards you've created</i> %>
  <div class="cards pt-0 p-4">
    <% @cards.each do |card| %>
      <div class="cards-index-card text-center d-flex flex-direction: column justify-content-around p-1 mt-2">
        <div>
          <%= link_to card_path(card), class: "trash-icon", data: {class: "trash-icon", turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
        <p class="index-content m-3"><%= card.originalcontent %></p>
        <div class="card-title">
          <span>#<%= card.practice.name %></span>
        </div>
        <p><%= card.created_at.strftime('%Y-%m-%d')  %></p>
        <%= link_to("view card", card_path(card), {class: "btn custom-button border-color-none"}) %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <%= link_to "Back", :back , {:class=>"btn btn-outline-danger"} %>
  </div>
</div>
